{% comment %}
** Image with text overlay - homepage partial **
- Draggable section
{% endcomment %}

{% include 'include-image-with-text-overlay' %}


<style>
  
  {% if section.settings.button1_text_color != blank %}
  #banner-{{ id }} .action_button.first_button {
    color: {{ section.settings.button1_text_color }};
  }
  {% endif %}
  
  
  {% if section.settings.button1_text_color_hover != blank %}
  #banner-{{ id }} .action_button.first_button:hover {
    border-color: {{ section.settings.button1_text_color_hover }};
  }
  {% endif %}
  
  {% if section.settings.button2_text_color != blank %}
  #banner-{{ id }} .action_button.second_button {
    color: {{ section.settings.button2_text_color }};
  }
  {% endif %}
  
  
  {% if section.settings.button2_text_color_hover != blank %}
  #banner-{{ id }} .action_button.second_button:hover {
    color: {{ section.settings.button2_text_color_hover }};
  }
  {% endif %}
  
</style>

