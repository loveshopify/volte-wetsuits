        display: block !important;
      }
      &.reveal-details {
        opacity: 1;
      }
      .button {
        margin-top: 15px;
      }
    }
    .description {
      color: {{ settings.featured_promotions_color }};
      transition: all 0.3s linear;
      margin-bottom: 0;
    }
